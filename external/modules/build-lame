#! /bin/bash

# This will setup prefix, sysroot and PATH to arm-linux-androideabi-gcc
source ./setup-build-env-arm-linux-androideabi-gcc

cd lame-3.99.5 && \
    ./configure \
       --host=arm-linux \
       --prefix=${prefix} \
       --enable-static=yes \
       --enable-shared=no \
       --disable-frontend \
       --disable-rpath \
       --with-pic \
         CPP="${CPP}" \
         CPPFLAGS="--sysroot=${sysroot} ${CPPFLAGS}" \
         CC="${CC}" \
         CFLAGS="--sysroot=${sysroot} ${CFLAGS}" \
         CXX="${CXX}" \
         CXXFLAGS="--sysroot=${sysroot} ${CXXFLAGS}" && \
             make V=1 all install

